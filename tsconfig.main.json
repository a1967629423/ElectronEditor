{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "dist_main",
      "baseUrl": "main_process",
      "paths": {
        "@/*": [
          "main_process/*"
        ]
      },
      
      "lib": [
        "esnext",
        "scripthost",
        "DOM"
      ]
    },
    "include": [
        "main_process/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src"
    ]
  }
  